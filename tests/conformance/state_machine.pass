<states> [
    <greet_player> [
        <look_at> <$player>
        <wait> <1s>
        <walk_to> <$player>
        <say> <Good evening traveler.>
    ]
    <last_words> [
        <say> <Tis a cruel world!>
    ]
]
<events> [
    <player_spotted> [
        <goto_state> <greet_player>
    ]
    <died> [
        <goto_state> <last_words>
    ]
]
